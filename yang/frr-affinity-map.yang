  revision 2022-11-03 {
    description
      "Initial revision";
  }

  typedef affinity-map-ref {
    type leafref {
      path "/frr-affinity-map:lib/frr-affinity-map:affinity-maps/frr-affinity-map:affinity-map/frr-affinity-map:name";
      require-instance true;
    }
    description
      "Reference to an affinity map";
  }

  container lib {
    container affinity-maps {
      description
        "Affinity Mapping Table";
      list affinity-map {
        key "name";
        unique "value";
        description
          "Affinity Mapping configuration";
        leaf name {
          type string {
            length "1..32";
          }
          description
            "Affinity Name";
        }
        leaf value {
          mandatory true;
          type uint16 {
            range "0..1023";
          }
          description
            "Bit position";
        }
      }
    }
  }
}
