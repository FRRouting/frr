arg_state='down'
arg_gateway_ip=''
case "$1" in
    deconfig|leasefail|nak)
        arg_state=down
        ;;
    bound|renew)
        arg_state=up
        arg_gateway_ip=$router
        ;;
esac

@e_sbindir@/update-dhcp-gw $interface $arg_state $arg_gateway_ip
